<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HabitLog.HabitLogActivity">

    <TextView
        android:id="@+id/habit_log_tv_nickname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임의 오늘,"
        android:textColor="@color/colorDarkGray"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/a_lignt_font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/habit_log_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/habit_log_tv_nickname_title"
        app:layout_constraintLeft_toLeftOf="@id/habit_log_tv_nickname_title"
        android:layout_marginTop="5dp"
        android:text="20/09/20"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorDarkGray"
        android:fontFamily="@font/a_lignt_font"/>

    <TextView
        android:id="@+id/habit_log_tv_btn_add_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="습관더하기"
        android:fontFamily="@font/a_lignt_font"
        android:drawableTop="@drawable/ic_plus"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/habit_log_tv_nickname_title"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/habit_log_tv_btn_remove_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHotCoral"
        android:text="습관빼기"
        android:fontFamily="@font/a_lignt_font"
        android:drawableTop="@drawable/ic_minus"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorHotCoral"
        app:layout_constraintRight_toLeftOf="@id/habit_log_tv_btn_add_habit"
        app:layout_constraintTop_toTopOf="@id/habit_log_tv_nickname_title"
        android:layout_marginRight="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>