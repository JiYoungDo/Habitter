<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/frequent_question_item_title"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorDarkGray"
        android:drawableLeft="@drawable/ic_question_answer"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorDarkGray"
        android:text="습관을 추가하거나 삭제는 어떻게 하나요?"
        android:textSize="14sp"
        android:fontFamily="@font/a_lignt_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/frequent_question_item_detail"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/frequent_question_item_title"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorDarkGray"
        android:text="오른쪽 상단의 습관더하기, 습관빼기 버튼을 사용하여 편집 할 수 있습니다."
        android:textSize="12sp"
        android:fontFamily="@font/a_lignt_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>