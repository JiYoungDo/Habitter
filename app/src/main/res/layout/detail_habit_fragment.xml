<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_habit_fm_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close"
        android:tint="@color/colorDarkGray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:id="@+id/detail_habit_fm_tv_habit_title"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_moon"
        android:drawableTint="@color/colorAccent"
        android:drawablePadding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorDarkGray"
        android:fontFamily="@font/a_lignt_font"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="\'운동하기\' 오늘로 잘 해냈죠?"/>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/detail_habit_fm_calendar"
        android:background="@color/colorMiddleGray"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/detail_habit_fm_tv_habit_title"
        android:layout_width="match_parent"
        app:mcv_calendarMode="week"
        android:layout_height="wrap_content"
        app:mcv_selectionColor="@color/colorAccent"
        app:mcv_arrowColor="@color/colorAccent" />

    <TextView
        android:id="@+id/detail_habit_fm_add_new_alarm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorHotCoral"
        android:fontFamily="@font/a_lignt_font"
        android:layout_marginBottom="20dp"
        android:text="@string/addnewalarm"/>


</androidx.constraintlayout.widget.ConstraintLayout>