<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/colorWhite"
    android:background="@drawable/round_background"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="340dp">

    <TextView
        android:id="@+id/pop_up_info_tv_line1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요."
        android:fontFamily="@font/a_lignt_font"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorHotCoral"/>
    <TextView
        android:id="@+id/pop_up_info_tv_line2"
        app:layout_constraintTop_toBottomOf="@id/pop_up_info_tv_line1"
        app:layout_constraintLeft_toLeftOf="@id/pop_up_info_tv_line1"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해비터 입니다."
        android:fontFamily="@font/a_lignt_font"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorHotCoral"/>

    <ImageView
        android:id="@+id/pop_up_info_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"/>

    <TextView
        android:id="@+id/pop_up_info_tv_line3"
        app:layout_constraintTop_toBottomOf="@id/pop_up_info_tv_line2"
        app:layout_constraintLeft_toLeftOf="@id/pop_up_info_tv_line2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해비터 에서는, 습관 형성을 돕기 위해"
        android:fontFamily="@font/a_lignt_font"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGray"/>

    <TextView
        android:id="@+id/pop_up_info_tv_line4"
        app:layout_constraintTop_toBottomOf="@id/pop_up_info_tv_line3"
        app:layout_constraintLeft_toLeftOf="@id/pop_up_info_tv_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="자신의 성향 파악 분석과"
        android:fontFamily="@font/a_lignt_font"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGray"/>

    <TextView
        android:id="@+id/pop_up_info_tv_line5"
        app:layout_constraintTop_toBottomOf="@id/pop_up_info_tv_line4"
        app:layout_constraintLeft_toLeftOf="@id/pop_up_info_tv_line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="자신의 습관 신호, 반복행동, 보상을 분"
        android:fontFamily="@font/a_lignt_font"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGray"/>

    <TextView
        android:id="@+id/pop_up_info_tv_line6"
        app:layout_constraintTop_toBottomOf="@id/pop_up_info_tv_line5"
        app:layout_constraintLeft_toLeftOf="@id/pop_up_info_tv_line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="석하여 습관 형성 및 수정을 돕습니다."
        android:fontFamily="@font/a_lignt_font"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGray"/>

    <TextView
        android:id="@+id/pop_up_info_tv_line7"
        app:layout_constraintTop_toBottomOf="@id/pop_up_info_tv_line6"
        app:layout_constraintLeft_toLeftOf="@id/pop_up_info_tv_line6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="분석 없이, 바로 참여도 가능합니다."
        android:fontFamily="@font/a_lignt_font"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGray"/>

    <TextView
        android:id="@+id/pop_up_info_tv_line8"
        app:layout_constraintTop_toBottomOf="@id/pop_up_info_tv_line7"
        app:layout_constraintLeft_toLeftOf="@id/pop_up_info_tv_line7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="그럼, 좋은 결과 있길 바랍니다."
        android:fontFamily="@font/a_lignt_font"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGray"/>

    <Button
        android:id="@+id/pop_up_info_btn_go_to_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/colorHotCoral"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="안내 화면 으로"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/a_lignt_font"/>

</androidx.constraintlayout.widget.ConstraintLayout>