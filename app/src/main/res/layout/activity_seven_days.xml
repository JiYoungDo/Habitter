<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".SevenDays.SevenDaysActivity">

    <ImageView
        android:id="@+id/seven_days_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_arrow_back"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/seven_days_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seven_days_btn_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/a_lignt_font"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/colorPrimary"
        android:text="[D + 1]"
        android:textSize="24sp"/>

    <ScrollView
        android:id="@+id/seven_days_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seven_days_tv_title"
        android:layout_marginTop="20dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/seven_days_tv_question_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/a_lignt_font"
                android:text="@string/seven_days_Q_where"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/seven_days_et_question_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seven_days_tv_question_1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="14sp"
                android:textColor="@color/colorDarkGray"
                android:textColorHint="@color/colorMiddleGray"
                android:hint="@string/seven_days_Q_where_hint"/>

            <TextView
                android:id="@+id/seven_days_tv_question_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seven_days_et_question_1"
                app:layout_constraintLeft_toLeftOf="@id/seven_days_et_question_1"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/a_lignt_font"
                android:text="@string/seven_days_Q_when"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/seven_days_btn_question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seven_days_tv_question_2"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/colorDarkGray"
                android:background="@drawable/b_green_round_background"
                android:text="@string/seven_days_Q_when_hint"/>

            <TextView
                android:id="@+id/seven_days_tv_question_3"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seven_days_btn_question_2"
                app:layout_constraintLeft_toLeftOf="@id/seven_days_et_question_1"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/a_lignt_font"
                android:text="@string/seven_days_Q_emo"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>

            <HorizontalScrollView
                android:id="@+id/seven_days_btn_question_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seven_days_tv_question_3"
                app:layout_constraintLeft_toLeftOf="@id/seven_days_tv_question_3"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/seven_days_iv_emo_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emo_1"/>
                    <ImageView
                        android:id="@+id/seven_days_iv_emo_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emo_2"/>

                    <ImageView
                        android:id="@+id/seven_days_iv_emo_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emo_3"/>

                    <ImageView
                        android:id="@+id/seven_days_iv_emo_4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emo_4"/>

                    <ImageView
                        android:id="@+id/seven_days_iv_emo_5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emo_5"/>

                    <ImageView
                        android:id="@+id/seven_days_iv_emo_6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emo_6"/>

                    <ImageView
                        android:id="@+id/seven_days_iv_emo_7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emo_7"/>

                    <ImageView
                        android:id="@+id/seven_days_iv_emo_8"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emo_8"/>

                    <View
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:background="@color/colorWhite"/>
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/seven_days_tv_question_4"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seven_days_btn_question_3"
                app:layout_constraintLeft_toLeftOf="@id/seven_days_et_question_1"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/a_lignt_font"
                android:text="@string/seven_days_Q_others"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>

            <RadioGroup
                android:id="@+id/seven_days_radio_grp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/seven_days_tv_question_4"
                app:layout_constraintTop_toBottomOf="@id/seven_days_tv_question_4"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alone"
                    android:paddingRight="10dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/b_green_round_background"
                   android:backgroundTint="@color/colorBlack"
                    android:textColor="@color/colorWhite"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_alone"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/b_green_round_background"
                    android:backgroundTint="@color/colorBlack"
                    android:textColor="@color/colorWhite"/>
            </RadioGroup>


            <TextView
                android:id="@+id/seven_days_tv_question_5"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seven_days_radio_grp_4"
                app:layout_constraintLeft_toLeftOf="@id/seven_days_et_question_1"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/a_lignt_font"
                android:text="@string/seven_days_Q_other_act"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/seven_days_et_question_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seven_days_tv_question_5"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="14sp"
                android:textColor="@color/colorDarkGray"
                android:textColorHint="@color/colorMiddleGray"
                android:hint="@string/seven_days_Q_other_act_hint"/>

            <View
                app:layout_constraintTop_toBottomOf="@id/seven_days_et_question_5"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/colorWhite"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>