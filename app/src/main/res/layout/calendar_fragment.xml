<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <TextView
       android:id="@+id/calendar_fm_tv_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/calendar_with"
       android:fontFamily="@font/a_lignt_font"
       android:textSize="20sp"
       android:textColor="@color/colorDarkGray"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <View
       android:id="@+id/calendar_fm_v_0"
       android:layout_width="match_parent"
       android:layout_height="2dp"
       app:layout_constraintTop_toBottomOf="@id/calendar_fm_tv_title"
       android:layout_marginTop="20dp"
       android:background="@color/colorPrimaryDark"/>

   <com.prolificinteractive.materialcalendarview.MaterialCalendarView
       android:id="@+id/habit_log_calendar_fm_calendar_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/colorMiddleGray"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="20dp"
       app:mcv_headerTextAppearance="@color/colorBlack"
       app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>